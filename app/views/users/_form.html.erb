<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :u_name, class: 'form-control', placeholder: "Name" %>
  </div>
  <div class="form-group">
    <%= f.text_field :u_email, class: 'form-control', placeholder: "Email Adress"  %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password" %>
  </div>
  
  <div style="display: none"><%= f.text_field :u_picture, value: "http://www.cabodelgado.gov.mz/programa-do-governador/person.png/image_preview"%></div>
  
  <div class="actions">
    <%= f.submit class: "btn btn-success", style: "width: 100%"%>
  </div>
<% end %>

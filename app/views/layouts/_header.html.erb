<link rel="stylesheet" type="text/css" href="http://localhost:3000/assets/main.css">
<link href='https://fonts.googleapis.com/css?family=Roboto:100' rel='stylesheet' type='text/css'>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><strong>Endless</strong>Board</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">
    		<% if logged_in? %>
    			<ul class="nav navbar-nav navbar-left">
    				<li><%= link_to "Welcome "+current_user.u_name, current_user %></li>
    			</ul>
    		<% end %>
    	<div class="navbar-form navbar-left">
    		<% if logged_in? %>
    		<% else %>
			    <%= form_for(:session, url: login_path) do |f| %>
			    <div class='form-group'>
				  <div class="field">
				    <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
				  </div>
				</div>
				<div class='form-group'>
				  <div class="field">
				    <%= f.password_field :password, placeholder: "Password", class: "form-control"%>
				  </div>
				</div>
				<div class='form-group'>
					<div class="actions">
					    <%= f.submit "Log In", class: "btn btn-success" %>
					</div>
				</div>
				<% end %>
			<% end %>
		</div>
		<% if logged_in? %>
			<ul class="nav navbar-nav navbar-left">
				<li><%= link_to "Log out", logout_path, method: "delete" %></li>
			</ul>
		<% else %>
			<ul class="nav navbar-nav navbar-left">
				<li><a href="users/new">Sign Up</a></li>
			</ul>
		<% end %>

		<div class="navbar-form navbar-right">
			<form method='GET' action='posts/search'>
				<div class='form-group'>
					<input type='text' class='form-control' placeholder='Search Posts'></input>
				</div>
				<div class='form-group'>
					<input type='submit' class='btn btn-success' value='Search'></input>
				</div>
			</form>
		</div>

      <!--form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form-->
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class='displacer'></div>
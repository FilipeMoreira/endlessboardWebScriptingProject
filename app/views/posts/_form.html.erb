<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :p_title, class: "form-control", placeholder: "Post Title"%>
  </div>
  <div class="form-group">
    <%= f.text_area :p_content, class: "form-control text-area", placeholder: "Post Content" %>
  </div>
  <div class="form-group hidden">
    <%= f.datetime_select :p_date, class: "form-control"%>
  </div>

  <script type="text/javascript">
      var date = new Date();
      date = date.getHours();
      $("#post_p_date_4i").val(date);
  </script>

  <div class="form-group hidden">
    <%= f.text_field :user_id, class: "form-control", value: current_user.id %>
  </div>

  <% if(params[:parent]) %>
    <div class="form-group hidden">
      <%= f.text_field :post_id, class: "form-control", value: params[:parent]%>
    </div>
  <% else %>
    <div class="form-group hidden">
      <%= f.text_field :post_id, class: "form-control"%>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit class: "btn btn-success", style: "width: 100%"%>
  </div>
<% end %>
